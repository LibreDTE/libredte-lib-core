                                        <td>
                                            {% if otraMoneda %}
                                                {{ document.Encabezado.Totales.IVA
                                                    | number_format(2, '.', ',') }}
                                            {% else %}
                                                {{ document.Encabezado.Totales.IVA
                                                    | number_format(0, ',', '.') }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endif %}
